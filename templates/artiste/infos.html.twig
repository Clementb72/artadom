{% extends 'base.html.twig' %}

{% block title %}Artistes
{% endblock %}

{% block body %}

	{% include "templates/nav.html.twig" %}
	<div class="container">
		<div class="row">
			<h2 class="text-center mx-auto">Détail Artiste</h2>
			<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" id="sticky-sidebar">
				<div class="card bg-light sticky-top mb-4 mx-auto text-center">
					<div class="card-body">
						<h4 class="card-title">{{artiste.pseudo}}</h4>
						<p class="card-text">{{artiste.localisation}}</p>
						<row><img src={{asset("images/"~artiste.imgArtiste)}} width="200" height="200" class="img-fluid img-center mx-auto"></row>
						<br>
						<div><br>
							<a class="btn btn-block btn-primary" href="#">Discuter avec l'artiste</a>
						</div>
					</div>
				</div>
			</div>
			<div class="col-xs-8 col-8 mb-4">
				<div class="card bg-light mb-8" style="margin: 0 -12px 0 -12px;">
					<div class="card-body">
						<h4 style="text-align: center;">PRESENTATION</h4>
						<p class="mb-2">{{artiste.description}}</p>
					</div>
				</div>
				{# récupérer les informations de la table prestations #}
				{%for prestation in prestations %}

					<div class="row mt-3">
						<div class="card bg-light mb-3">
							<div class="row">

								<div class="col-9">
									<div>
										<div>
											<h4>
												<u>{{prestation.libelle}}</u>
											</h4><br>
										</div>
										<div id="descDiv{{prestation.id}}">
											{{prestation.description}}
										</div>
									</div>
								</div>
								<div class="col-3" style="text-align: right;">Cout de Prestation :<br><strong style="font-size: xx-large;">{{prestation.prix}}
										€</strong>
									<a href="#">
										<button class="btn btn-primary text-center">Ajouter au panier</button>
									</a>

								</div>
								<div class="row">
									<div>
										Temps de Prestation :
										<strong>{{prestation.temps}}</strong>
									</div>
								</div>
							</div>
						</div>
					</div>

				{% endfor %}

			</div>
		</div>
	</div>

{% include "templates/footer.html.twig" %}{% endblock %}
